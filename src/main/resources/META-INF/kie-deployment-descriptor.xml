<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<deployment-descriptor xsi:schemaLocation="http://www.jboss.org/jbpm deployment-descriptor.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <persistence-unit>org.jbpm.domain</persistence-unit>
    <audit-persistence-unit>org.jbpm.domain</audit-persistence-unit>
    <audit-mode>JPA</audit-mode>
    <persistence-mode>JPA</persistence-mode>
    <runtime-strategy>PER_PROCESS_INSTANCE</runtime-strategy>
    <marshalling-strategies/>
    <event-listeners>
        <event-listener>
            <resolver>mvel</resolver>
            <identifier>new com.health_insurance.monitoring.CustomProcessEventListener()</identifier>
            <parameters/>
        </event-listener>
        <event-listener>
            <resolver>mvel</resolver>
            <identifier>new com.health_insurance.batigerteam.monitoring.CustomAgendaEventListener()</identifier>
            <parameters/>
        </event-listener>
    </event-listeners>
    <task-event-listeners>
        <task-event-listener>
            <resolver>mvel</resolver>
            <identifier>new com.health_insurance.monitoring.CustomTaskLifeCycleEventListener()</identifier>
            <parameters/>
        </task-event-listener>
    </task-event-listeners>
    <globals/>
    <work-item-handlers>
        <work-item-handler>
            <resolver>mvel</resolver>
            <identifier>new com.redhat.batigerteam.publish_subscribe_example.ReceiveTaskHandler()</identifier>
            <parameters>
                <parameter xsi:type="objectModel">
                    <resolver>mvel</resolver>
                    <identifier>java.lang.String</identifier>
                    <parameters>
                        <parameter xsi:type="xs:string" xmlns:xs="http://www.w3.org/2001/XMLSchema">MessageId</parameter>
                    </parameters>
                </parameter>
            </parameters>
            <name>Receive Task</name>
        </work-item-handler>
        <work-item-handler>
            <resolver>mvel</resolver>
            <identifier>new com.redhat.batigerteam.publish_subscribe_example.SendTaskHandler()</identifier>
            <parameters>
                <parameter xsi:type="objectModel">
                    <resolver>mvel</resolver>
                    <identifier>java.lang.String</identifier>
                    <parameters>
                        <parameter xsi:type="xs:string" xmlns:xs="http://www.w3.org/2001/XMLSchema">Message</parameter>
                    </parameters>
                </parameter>
            </parameters>
            <name>Send Task</name>
        </work-item-handler>
    </work-item-handlers>
    <environment-entries/>
    <configurations/>
    <required-roles/>
    <remoteable-classes/>
    <limit-serialization-classes>true</limit-serialization-classes>
</deployment-descriptor>
